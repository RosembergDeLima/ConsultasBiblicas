<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tableLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/tableLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Aflição"
                android:id="@+id/aflicao"
                android:layout_weight="1"
                android:onClick="irParaAflicao" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alegria"
                android:id="@+id/alegria"
                android:layout_weight="1"
                android:onClick="irParaAlrgria"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Benção"
                android:id="@+id/bencao"
                android:layout_weight="1"
                android:onClick="irParaBencao"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cura"
                android:id="@+id/cura"
                android:layout_weight="1"
                android:onClick="irParaCura"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descanso"
                android:id="@+id/descanco"
                android:layout_weight="1"
                android:onClick="irParaDescanso"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Esperança"
                android:id="@+id/esperanca"
                android:layout_weight="1"
                android:onClick="irParaEsperanca"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fé"
                android:id="@+id/fe"
                android:layout_weight="1"
                android:onClick="irParaFe"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Glória"
                android:id="@+id/gloria"
                android:layout_weight="1"
                android:onClick="irParaGloria"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Libertação"
                android:id="@+id/libertacao"
                android:layout_weight="1"
                android:onClick="irParaLibertacao"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/biblia2"
        android:src="@drawable/bible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tableLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Programa destinado à consultas bíblicas. Informe o que está sentindo neste momento para receber um versículo:"
        android:id="@+id/intro"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tableLayout"
        android:layout_alignParentTop="true" />

</RelativeLayout>
